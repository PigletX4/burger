<h1>Burger Time!</h1>

<h2>Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/devour_button}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured=true}}
      {{> burgers/devoured_burgers}}
    {{/if}}
  {{/each}}
</ul>

<h2>Place your order!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Make a Burger!</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="submit">Order!</button>
</form>
